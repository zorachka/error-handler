{
    "name": "zorachka/error-handler",
    "description": "Zorachka Error Handler",
    "keywords": [
        "zorachka",
        "error handler"
    ],
    "homepage": "https://github.com/zorachka/error-handler",
    "require": {
        "php": "^8.1",
        "filp/whoops": "^2.15",
        "zorachka/container": "^3.1"
    },
    "license": "MIT",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "authors": [
        {
            "name": "Siarhei Bautrukevich",
            "email": "hello@bautrukevich.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Zorachka\\ErrorHandler\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zorachka\\ErrorHandler\\Tests\\": "./tests"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.16",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "cs-lint": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "analyse": "phpstan analyse -c phpstan.neon",
        "test": "vendor/bin/phpunit --colors=always"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
